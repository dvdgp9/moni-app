# Usar index.php por defecto
DirectoryIndex index.php

# Seguridad básica: desactivar listado de directorios
Options -Indexes

# Encabezados mínimos
<IfModule mod_headers.c>
  Header always set X-Content-Type-Options nosniff
  Header always set X-Frame-Options SAMEORIGIN
  Header always set X-XSS-Protection "1; mode=block"
</IfModule>

# Compresión si está disponible
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/plain text/html text/xml text/css application/javascript application/json image/svg+xml
</IfModule>
